generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Project {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  title       String  
  description String
  img         String[]
  video       String[]
  archive     String?  @default("no")
}
 

model Blog {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  author      String
  title       String
  description String 
  img         String[]
  date        DateTime @default(now()) @db.Date
  archive     String?  @default("no")
}

  
 
model Review {
  id          String  @id @default(auto()) @map("_id") @db.ObjectId
  name        String 
  description String  
  archive     String? @default("no")
}


model Order {
  id          String  @id @default(auto()) @map("_id") @db.ObjectId
  name        String 
  email String 
  phone String 
  location String 
  subject String 
  message String 
  cat String 
  date        DateTime @default(now()) @db.Date
}
 